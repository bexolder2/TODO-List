<Window x:Class="TODOList.DialogXaml.NewProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TODOList.DialogXaml"
        mc:Ignorable="d"
        Title="NewProject" Height="110" Width="196.3"
        x:Name="npDialog"
        WindowStyle="None">
    <Grid x:Name="npGrid">
        <Label Margin="5,-5,10,74" MouseLeftButtonDown="MouseLeftButtonDown_Move">Enter new project name</Label>
        <TextBox x:Name="tbName" MaxLength="20" Margin="10,28,10,46"></TextBox>
        <Button Margin="10,66,95,6" Click="Save_Click">Save</Button>
        <Button Margin="95,66,10,6" Click="Cancel_Click">Cancel</Button>
    </Grid>
</Window>
